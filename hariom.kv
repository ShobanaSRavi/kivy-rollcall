#:kivy 2.3.0
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton
#:import OneLineListItem kivymd.uix.list.OneLineListItem
#:import StudentListRow main.StudentListRow
#:import StudentRow rollcall.StudentRow

MDNavigationLayout:
    id: nav_layout

    MDScreenManager:
        id: screen_manager


        HomeScreen:
            id: home_screen
            name: "home"

        StudentsListScreen:
            id: studentslist_screen
            name: "studentslist"

        RollCallScreen:
            id: rollcall_screen
            name: "rollcall"

        QueryScreen:
            id: query_screen
            name: "query"

    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)
        BoxLayout:
            orientation: "vertical"
            spacing: "40dp"
            padding: "10dp"

            #Image:
             #   source: 'vel mayil sticker.jpg'

            Image:
                id: profile_img
                source: "default_profile.png"  # fallback image
                size_hint: (None, None)
                size: dp(80), dp(80)
                allow_stretch: True
                keep_ratio: True
                pos_hint: {"center_x": 0.5}
            MDFlatButton:
                text: "Change Image"
                on_release: app.pick_image()
                pos_hint: {"center_x": 0.5}

            #Divider line
            MDSeparator:
                height: dp(1)

                OneLineAvatarIconListItem:
                    text: "Home"
                    on_release:
                        screen_manager.current = "home"
                        nav_drawer.set_state("close")
                    IconLeftWidget:
                        icon: "home"


            OneLineAvatarIconListItem:
                text: "Students List"
                on_release:
                    #exec("screen_manager.current = 'studentslist'", nav_drawer.set_state("close")) if app.is_logged_in else None
                    app.check_and_switch("studentslist")
                    nav_drawer.set_state("close")
                IconLeftWidget:
                    icon: "account-multiple"


            OneLineAvatarIconListItem:
                text: "Roll Call"
                on_release:
                    #exec("screen_manager.current = 'rollcall'", nav_drawer.set_state("close")) if app.is_logged_in else None
                    app.check_and_switch("rollcall")
                    nav_drawer.set_state("close")
                IconLeftWidget:
                    icon: "check"

            #OneLineListItem:
            OneLineAvatarIconListItem:
                text: "Ask For Details"
                on_release:
                    #exec("screen_manager.current = 'query'", nav_drawer.set_state("close")) if app.is_logged_in else None
                    app.check_and_switch("query")
                    nav_drawer.set_state("close")
                IconLeftWidget:
                    icon: "magnify"

            #OneLineListItem:
            OneLineAvatarIconListItem:
                text: "Logout"
                on_release:
                    on_release: app.logout()
                IconLeftWidget:
                    icon: "logout"
            ScrollView:
<HomeScreen>:
    name: "home"


    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "20dp"

        MDTopAppBar:
            title: "Menu"
            elevation: 5
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]


        MDLabel:
            text: "Welcome to YesMissApp"
            halign: "center"
            font_style: "H4"
            font_color: "blue"
            padding_y: 15
            height: self.texture_size[1]
        MDTextField:
            id:user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x":0.5,"center_y": 0.7}
            write_tab: False
            on_text: self.text = self.text.replace(" ","")
        MDTextField:
            id:pwd
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x":0.5}
            password: True
            write_tab: False
            padding: 0
            on_text: self.text = self.text.replace(" ","")
        BoxLayout:
            size_hint: .85, None
            height: dp(30)
            pos_hint: {"center_x": .8, "center_y": .7}
            spacing: dp(5)
            MDCheckbox:
                id: check_box
                size_hint: None, None
                width: dp(30)
                height: dp(30)
                on_press:
                    pwd.password= False if pwd.password==True else True
                    pwd.icon_right= "eye" if pwd.icon_right=="eye-off" else "eye-off"
            MDLabel:
                text: "[ref=Show Password]Show Password[/ref]"
                markup: True
                on_ref_press:
                    #check_box.active: False if check_box.active==True else True
                    check_box.active = not check_box.active

        MDBoxLayout:
            orientation: "horizontal"
            size_hint: .3, None
            pos_hint: {"center_x": .5,"center_y":.7}
            spacing: dp(10)
            MDFlatButton:
                text: "LOG IN"
                font_size: 22
                #pos_hint: {"center_x": .5}
                width: dp(50)
                md_bg_color: "blue"
                size_hint_x: 1
                #on_release: app.root.current = "login"
                on_release: root.login(user.text, pwd.text)

            MDFlatButton:
                text: "SIGN UP"
                font_size: 22
                #pos_hint: {"center_x": .5}
                md_bg_color: "blue"
                size_hint_x: 1
                #on_release: root.register_user(reg_username.text, reg_password.text)
                on_release: root.register_user(user.text, pwd.text)


<StudentsListScreen>:
    name: "studentslist"

    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Menu"
            elevation: 5
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]

        MDBoxLayout:
            id: table_box
            orientation: "vertical"
            size_hint_y: 1 # Let this box fill the available space
            padding: (dp(30), 0) # Add horizontal padding to center the table visually
            MDLabel:
                text: "Students List"
                font_size: sp(18)
                halign: "center"
                theme_text_color: "Primary"
                size_hint_x: 0.3
                size_hint_y: None # Tells BoxLayout to ignore vertical size-hint
                height: dp(50)  # Sets a fixed height

            MDGridLayout:  # Table headers
                cols: 4
                size_hint_y: None
                height: dp(48)
                padding: dp(5)
                spacing: dp(10)
                md_bg_color: 0.2, 0.2, 0.2, 0.1

                MDLabel:
                    text: "Name"
                    bold: True
                    halign: "center"
                    size_hint_x: 0.4
                MDLabel:
                    text: "Age"
                    bold: True
                    halign: "center"
                    size_hint_x: 0.2
                MDLabel:
                    text: "Phone"
                    bold: True
                    halign: "center"
                    size_hint_x: 0.3
                MDLabel:
                    text: ""
                    size_hint_x: 0.1




            RecycleView:
                id: student_rv
                viewclass: "StudentListRow"
                data: []
                RecycleBoxLayout:
                    default_size: None, dp(48)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: "vertical"

            MDRaisedButton:
                text: "Add Student"
                spacing: dp(20)
                size_hint_x: 1
                #width: dp(100)
                on_release: root.show_add_student_dialog()

        # --- Bottom toolbar (hidden initially) ---
        MDBoxLayout:
            id: bottom_toolbar
            size_hint_y: None
            height: 0   # hidden initially
            md_bg_color: 0.2, 0.2, 0.2, 1
            spacing: dp(10)
            opacity: 0
            Widget:  # push delete button to right
            MDFlatButton:
                #icon: "delete"
                text: "delete"
                theme_text_color: "Custom"
                text_color: 1, 0, 0, 1
                font_size: 20
                size_hint: None,None
                size: dp(48), dp(48)
                on_release: root.show_delete_dialog()
            Widget:
            MDFlatButton:
                #icon: "edit"
                text: "edit"
                theme_text_color: "Custom"
                text_color: "white"
                font_size: 20
                size_hint: None,None
                size: dp(48), dp(48)
                #on_release: app.root.ids.screen_manager.get_screen("rollcall").edit_student_dialog(root.name.strip())
                on_release: root.edit_student_dialog()
            Widget:
<StudentListRow>:
    orientation: "horizontal"
    size_hint_y: None
    height: dp(48)
    spacing: dp(10)
    padding: dp(5), 0
    name: ""
    age: ""
    phone: ""
    active: False
    # Column widths: match header below
    MDLabel:
        id: name_lbl
        text: root.name
        halign: "center"
        size_hint_x: 0.4
        font_size: sp(14)

    MDLabel:
        id: age_lbl
        text: root.age
        halign: "center"
        size_hint_x: 0.2
        font_size: sp(14)

    MDLabel:
        id: phone_lbl
        text: root.phone
        halign: "center"
        size_hint_x: 0.3
        font_size: sp(14)

    MDCheckbox:
        size_hint_x: 0.1
        width: dp(40)
        active: root.active
        on_parent: self.active = root.active  # ⬅️ force reset when recycled
        on_active: app.root.ids.screen_manager.get_screen("studentslist").toggle_selection(root.name, self.active)


<RollCallScreen>:
    name: "rollcall"
    BoxLayout:
        orientation: "vertical"
        #padding: dp(10)
        spacing: dp(15)
        MDTopAppBar:
            title: "Menu"
            elevation: 5
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]
        # Header
        BoxLayout:
            id: header_layout
            #orientation: "horizontal"
            padding: dp(10)
            spacing: dp(15)
            size_hint_y: None
            height: dp(48)

            MDLabel:
                id: date_label
                text: "Select Date"
                halign: "left"
                font_style: "Subtitle1"
                size_hint_x: .25
                size_hint_y: None
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                width: self.texture_size[0]
                shorten: True
                shorten_from: "right"
            MDIconButton:
                icon: "calendar"
                pos_hint: {"center_x": 0.7, "center_y": 0.5}
                size_hint_x: 0.1
                on_release: root.open_date_picker()


            MDLabel:
                text: "Roll Call"
                halign: "center"
                font_style: "H5"
                size_hint_x: 0.65
                #pos_hint: {"center_x": 0.3, "center_y": 0.5}


        # Column headers
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            size_hint_x: .9
            height: dp(40)
            halign: "center"
            padding: dp(8),0
            spacing: dp(10)

            MDLabel:
                text: "Name"
                halign: "center"
                #size_hint_x: 0.7
                bold: True
                #pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDLabel:
                text: "Present"
                halign: "center"
                #size_hint_x: 0.3
                #size_hint_x: None
                bold: True
                #pos_hint:{"center_x": 0.5, "center_y": 0.5}
                width: dp(100)
        RecycleView:
            id: student_rv_rollcall
            viewclass: "StudentRow"
            data: []
            RecycleBoxLayout:
                default_size: None, dp(48)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: "vertical"
        MDBoxLayout:
            size_hint_y: None
            size_hint_x: 1
            padding: dp(10)
            spacing: dp(30)
            height: dp(50)


            MDRaisedButton:
                text: "Submit"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint: .4, None
                halign: "center"
                on_release: root.submit_attendance()

<StudentRow>:
    orientation: "horizontal"
    size_hint_y: None
    height: dp(40)
    MDLabel:
        id: name_label
        text: root.student_name
        halign: "center"

    MDCheckbox:
        id: checkbox
        active: root.present
        #on_active: root.controller.on_present_toggle(root.student_name, self.active) if root.parent else None
        on_active: root.on_checkbox_active(self, self.active)
    #MDCheckbox:
     #   active: root.checked if hasattr(root,"checked") else False
      #  on_active:app.root.ids.screen_manager.get_screen("rollcall").on_present_toggle(root.student_name,self.active)

<QueryScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(15)

        MDTopAppBar:
            title: "Menu"
            elevation: 5
            left_action_items: [["menu", lambda x: app.root.ids.nav_drawer.set_state("toggle")]]

        MDLabel:
            text: "Ask for details"
            halign: "center"
            theme_text_color: "Primary"
            size_hint_y: None
            height: dp(40)

        # --- Row with Date Picker ---
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(48)
            spacing: dp(10)

            MDLabel:
                #id: date_label1
                text: "Select Date"
                halign: "left"
                font_style: "Subtitle1"
                size_hint_x: 0.4
            MDLabel:
                id: date_label1
                text: ""
                halign: "center"
                font_style: "Subtitle1"
                size_hint_x: 0.4
                md_bg_color: 1, 1, 1, 1
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
            MDIconButton:
                icon: "calendar"
                on_release: root.open_date_picker()

        # --- Row with Student Dropdown ---
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(48)
            spacing: dp(10)

            MDLabel:
                text: "Student Name"
                halign: "left"
                font_style: "Subtitle1"
                size_hint_x: 0.4
            MDLabel:
                id: name_label1
                text: ""
                halign: "center"
                font_style: "Subtitle1"
                size_hint_x: 0.4
                md_bg_color: 1, 1, 1, 1
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
            MDIconButton:
                id: student_drop_down
                icon: "menu-down"
                on_release: root.open_student_dropdown()
            #MDRaisedButton:
               # id: student_dropdown_btn
                #text: "▼"
                #font_style:"H4"
                #on_release: root.open_student_dropdown()

        # --- Submit Button ---
        MDRaisedButton:
            text: "Submit"
            pos_hint: {"center_x": 0.5}
            on_release: root.submit_query()

        # --- Result Box (Scrollable) ---
        ScrollView:
            MDLabel:
                id: query_result
                text: "Results will appear here..."
                halign: "left"
                valign: "top"
                size_hint_y: None
                height: self.texture_size[1] + dp(20)
                padding: dp(10), dp(10)
